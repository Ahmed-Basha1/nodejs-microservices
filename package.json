{
  "name": "azure-nodejs-microservices",
  "version": "1.0.0",
  "description": "A sample application demonstation Node.js microservices usage with an Azure infrastructure",
  "private": true,
  "scripts": {
    "start": "concurrently npm:app:* --kill-others",
    "app:services": "docker-compose up",
    "app:website": "npm run start --workspace=website",
    "build": "npm run build --workspaces --if-present",
    "docker:build": "npm run build --workspaces --if-present"
  },
  "author": "Yohan Lasorsa",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
